{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "es6",
    "module": "ES2022",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "paths": {
        "@/*": ["src/*"]
      }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
